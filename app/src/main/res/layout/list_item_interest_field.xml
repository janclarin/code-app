<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_star"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/description_btn_star" />

        <TextView
            android:id="@+id/tv_field_of_interest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/btn_star"
            android:layout_toStartOf="@id/btn_star"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_average_tuition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_field_of_interest"
            android:layout_alignLeft="@id/tv_field_of_interest"
            android:layout_alignRight="@id/tv_field_of_interest"
            android:layout_alignStart="@id/tv_field_of_interest"
            android:layout_below="@id/tv_field_of_interest"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>